<h1> Create a new job: </h1>

<form method="POST" action="/jobs">

  <label for="name"> Name: </label>
  <input type="text" id="job_name" name="job[name]">

  <input type="submit" value="Create New Job">
</form>

<% @tasks.each do |task| %>
  <input type="checkbox" name="job[task_ids][]" id="<%= task.id %>" value="<%= task.id %>"><%= task.name %><br>
<% end %>